@{
    ViewBag.Title = "FeaturePage";
}
@model List<WebApplication2.Models.Product>

<!DOCTYPE html>
<html>
<head>
    <script src="~/Scripts/site.js"></script>
    <link rel="stylesheet" href="~/Content/site.css" />
    <title>Sign Up</title>

</head>
<body>
    <h1>Sign Up</h1>
    @using (Html.BeginForm("FeaturePage", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <form asp-action="FeaturePage" method="post" id="FeaturePageForm">
            <div>
                <br />
                <h3>Details</h3>
                <div class="form-group">
                    <label for="title">Title</label>
                    <input asp-for="Title" type="text" id="Title" name="Title" class="form-control">
                </div>

                <div class="form-group">
                    <label for="products">Products</label>
                    <select name="products" id="products">
                        @foreach (var product in Model)
                        {
                            <option asp-for="Pid" value=@product.Id>@product.Name</option>
                        }

                    </select>
                </div>


                <div class="form-group">
                    <label for="title">Description</label>
                    <input asp-for="Description" type="text" id="Description" name="Description" class="form-control">
                </div>

                <input type="submit" value="Submit" class="btn btn-primary" onclick="return Case();" />


            </div>


        </form>


    }





</body>
</html>
