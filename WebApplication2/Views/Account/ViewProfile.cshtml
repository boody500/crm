@{ 
    ViewBag.Title = "ViewProfile";
}
@model WebApplication2.Models.User


<!DOCTYPE html>
<html>
<head>
    <script src="~/Scripts/site.js"></script>
    <link rel="stylesheet" href="~/Content/site.css" />
    <title>Sign Up</title>

</head>
<body>
    <h2>Profile</h2>
    @Html.ActionLink("Account", "FeaturePage", "Account", new { area = "" })


    <div>
        <br />
        <h3>Details</h3>
        <div class="form-group">
            <label for="FirstName">First Name</label>
            <input asp-for="FirstName" type="text" id="FirstName" name="FirstName" class="form-control" value=@Model.FirstName readonly>
        </div>
        <div class="form-group">
            <label for="LastName">Last Name</label>
            <input asp-for="LastName" type="text" id="LastName" name="LastName" class="form-control" value=@Model.LastName readonly>
        </div>



        <div class="form-group">
            <label for="JobTitle">Job Title</label>
            <input asp-for="JobTitle" type="text" id="JobTitle" name="JobTitle" class="form-control" value=@Model.JobTitle readonly>
        </div>
        <br />
    </div>

    <div>
        <h3>Contact Information</h3>
        <div class="form-group">
            <label for="Email">Email</label>
            <input asp-for="Email" type="text" id="Email" name="Email" class="form-control" autocomplete="on" value=@Model.Email readonly>

        </div>

        <div class="form-group">
            <label for="Password">Password</label>
            <input asp-for="Password" type="password" id="Password" name="Password" class="form-control" value=@Model.Password readonly />
        </div>

        <div class="form-group">
            <label for="MobilePhone">Mobile Phone</label>
            <input asp-for="MobilePhone" type="text" id="MobilePhone" name="MobilePhone" class="form-control" value=@Model.MobilePhone readonly>

        </div>

        <div class="form-group">
            <label for="BusinessPhone">Business Phone</label>
            <input asp-for="BusinessPhone" type="text" id="BusinessPhone" name="BusinessPhone" class="form-control" value=@Model.BusinessPhone readonly>
        </div>
        <br />
    </div>

    <div>
        <h3>Address</h3>
        <div class="form-group">
            <label for="Street">Street</label>
            <input asp-for="Street" type="text" id="Street" name="Street" class="form-control" value=@Model.Street readonly>

        </div>

        <div class="form-group">
            <label for="City">City</label>
            <input asp-for="City" type="text" id="City" name="City" class="form-control" value=@Model.City readonly>

        </div>

        <div class="form-group">
            <label for="Zip">Zip/Postal Code</label>
            <input asp-for="Zip" type="text" id="Zip" name="Zip" class="form-control" value=@Model.Zip readonly />

        </div>
        <br />
    </div>



    <script>
                var message = '@ViewBag.AlertMessage';
                if (message) {
                        alert(message);
                    }
    </script>










</body>
</html>
