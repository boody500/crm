@{
    ViewBag.Title = "Login";
}
@model WebApplication2.Models.User

<!DOCTYPE html>
<html>
<head>
    <script src="~/Scripts/site.js"></script>
    <link rel="stylesheet" href="~/Content/Site.css" />
    <title>Login</title>
</head>
<body>

    <h1>Login</h1>
    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label for="Email">Username</label>
            <input asp-for="Email" type="text" id="Email2" name="Email" class="form-control" />
        </div>
        <div class="form-group">
            <label for="Password">Password</label>
            <input asp-for="Password" type="password" id="Password2" name="Password" class="form-control" />
        </div>
        <input type="submit" value="Login" class="btn btn-primary" id="LoginFormButton" onclick="return login()" />

    }
    <script>
        var message = '@ViewBag.AlertMessage';
        if (message) {
            alert(message);
        }
    </script>

</body>
</html>
